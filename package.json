{
  "name": "angelblanco-dev-blog",
  "description": "My personal blog, built with svelte kit",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "blog": "node ./blog.js",
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "sitemap": "node createSitemap.js",
    "test": "run-p --race dev cy:run",
    "lint": "yarn js:lint && yarn scss:lint",
    "fix": "yarn js:fix",
    "js:lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "js:fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "scss:lint": "stylelint 'src/**/*.scss'",
    "scss:fix": "stylelint 'src/**/*.scss' --fix",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "docker:build": "docker build -t angelblanco.dev .",
    "docker:cypress:build": "docker build . -f Cypress.Dockerfile -t cypress-tests",
    "docker:cypress:run": "docker run --ipc=host cypress-tests",
    "sirv": "sirv dist"
  },
  "dependencies": {
    "commander": "^9.0.0",
    "compression": "^1.7.1",
    "dayjs": "^1.10.7",
    "html-minifier": "^4.0.0",
    "inquirer": "^8.2.0",
    "lodash": "^4.17.20",
    "reading-time": "^1.2.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.1.0",
    "@fortawesome/fontawesome-svg-core": "^6.1.0",
    "@fortawesome/free-brands-svg-icons": "^6.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "^1.0.0-next.188",
    "bulma": "^0.9.0",
    "chalk": "^5.0.1",
    "cypress": "^9.5.2",
    "dotenv": "^16.0.0",
    "escape-html": "^1.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "front-matter": "^4.0.2",
    "globby": "^13.1.1",
    "is-url": "^1.2.4",
    "jsdom": "^19.0.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "prismjs": "^1.27.0",
    "rollup-pluginutils": "^2.8.2",
    "shelljs": "^0.8.5",
    "sirv-cli": "^2.0.2",
    "sitemap-generator": "^8.5.1",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "svelte": "^3.34.0",
    "svelte-preprocess": "^4.2.0",
    "urijs": "^1.19.10",
    "wait-port": "^0.2.9"
  }
}
