{
  "name": "angelblanco-dev-blog",
  "description": "My personal blog, built with svelte kit",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "blog": "node ./blog.js",
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "sitemap": "node createSitemap.js",
    "test": "run-p --race dev cy:run",
    "lint": "yarn js:lint && yarn scss:lint",
    "fix": "yarn js:fix",
    "js:lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "js:fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "scss:lint": "stylelint 'src/**/*.scss'",
    "scss:fix": "stylelint 'src/**/*.scss' --fix",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "docker:build": "docker build -t angelblanco.dev .",
    "docker:cypress:build": "docker build . -f Cypress.Dockerfile -t cypress-tests",
    "docker:cypress:run": "docker run --ipc=host cypress-tests",
    "sirv": "sirv dist"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "compression": "^1.7.1",
    "dayjs": "^1.10.7",
    "html-minifier": "^4.0.0",
    "inquirer": "^8.2.0",
    "lodash": "^4.17.21",
    "reading-time": "^1.2.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "^1.0.0-next.188",
    "bulma": "^0.9.0",
    "chalk": "^4.1.0",
    "cypress": "^8.6.0",
    "escape-html": "^1.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "front-matter": "^4.0.2",
    "globby": "^12.0.2",
    "is-url": "^1.2.4",
    "jsdom": "^18.0.0",
    "markdown-it": "^12.2.0",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-table-of-contents": "^0.5.2",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "prismjs": "^1.17.1",
    "rollup-pluginutils": "^2.8.2",
    "shelljs": "^0.8.5",
    "sirv-cli": "^1.0.14",
    "sitemap-generator": "^8.5.1",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-standard-scss": "^2.0.0",
    "svelte": "^3.34.0",
    "svelte-preprocess": "^4.2.0",
    "urijs": "^1.19.7",
    "wait-port": "^0.2.9"
  }
}
