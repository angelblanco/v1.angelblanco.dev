{
  "name": "angelblanco-dev-blog",
  "description": "My personal blog, built with svelte kit",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "blog": "node ./blog",
    "dev": "svelte-kit dev",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "build:production": "yarn build dist",
    "sirv:production": "sirv dist --single",
    "start": "node build",
    "sitemap": "node createSitemap.js",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "scss:lint": "stylelint 'src/**/*.scss'",
    "scss:fix": "stylelint 'src/**/*.scss' --fix",
    "docker:build": "docker build -t angelblanco.dev .",
    "docker:cypress:build": "docker build . -f Cypress.Dockerfile -t cypress-tests",
    "docker:cypress:run": "docker run --ipc=host cypress-tests",
    "node-version": "node --version"
  },
  "dependencies": {
    "commander": "^6.1.0",
    "compression": "^1.7.1",
    "inquirer": "^7.3.2",
    "lodash": "^4.17.20",
    "moment": "^2.24.0",
    "reading-time": "^1.2.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "next",
    "bulma": "^0.9.0",
    "chalk": "^4.1.0",
    "cypress": "^5.2.0",
    "escape-html": "^1.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "front-matter": "^4.0.2",
    "globby": "^11.0.1",
    "is-url": "^1.2.4",
    "jsdom": "^16.2.2",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "prismjs": "^1.17.1",
    "rollup-pluginutils": "^2.8.2",
    "shelljs": "^0.8.4",
    "sitemap-generator": "^8.5.1",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.12.1",
    "svelte": "^3.34.0",
    "svelte-preprocess": "^4.2.0",
    "wait-port": "^0.2.9"
  }
}
